{
	"name": "ink-ansi-animation",
	"description": "Ink-based console program for playing ANSI animations",
	"version": "0.0.4",
	"bin": "./bin/cli.mjs",
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start": "./transpile.mjs && cd ../ansi && node ../ink/bin/cli.mjs --scrolling",
		"debug": "./transpile.mjs && cd ../ansi && node --inspect-brk ../ink/bin/cli.mjs",
		"build": "./transpile.mjs",
		"test": "xo && ava"
	},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chung-leong/react-ansi-animation.git"
  },
  "keywords": [
    "React",
		"ink",
    "ANSI"
  ],
	"files": [
		"./bin"
	],
  "author": "Chung Leong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chung-leong/react-ansi-animation/issues"
  },
  "homepage": "https://github.com/chung-leong/react-ansi-animation#readme",
	"dependencies": {
		"array-router": "^0.9.2",
		"cli-meow-help": "^3.1.0",
		"ink": "^3.2.0",
		"ink-multicolumn-select-input": "^0.5.2",
		"ink-select-input": "^4.2.1",
		"ink-spinner": "^4.0.3",
		"meow-reverse": "^0.2.1",
		"react": "^18.0.0",
		"react-ansi-animation": "^0.0.3",
		"react-seq": "^0.9.0",
		"shell-quote": "^1.8.0"
	},
	"devDependencies": {
		"@ava/babel": "^2.0.0",
		"@babel/core": "^7.20.12",
		"@babel/plugin-transform-react-jsx": "^7.20.7",
		"@babel/preset-env": "^7.20.2",
		"@babel/preset-react": "^7.18.6",
		"@babel/register": "^7.18.9",
		"ava": "^5.1.0",
		"chalk": "^4.1.2",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"globby": "^13.1.3",
		"ink-testing-library": "^2.1.0",
		"xo": "^0.39.1"
	},
	"ava": {
		"babel": true,
		"require": [
			"@babel/register"
		]
	},
	"babel": {
		"presets": [
			"@babel/preset-env",
			"@babel/preset-react"
		]
	},
	"xo": {
		"extends": "xo-react",
		"rules": {
			"react/prop-types": "off"
		}
	}
}
